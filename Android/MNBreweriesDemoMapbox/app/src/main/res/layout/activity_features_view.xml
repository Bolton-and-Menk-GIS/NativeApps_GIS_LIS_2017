<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.calebma.android.mnbreweriesdemomapbox.FeaturesViewActivity">


    <TextView
        android:id="@+id/brewery_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="Brewery Name"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/prev_btn"
        android:layout_marginTop="48dp" />

    <ImageButton
        android:id="@+id/prev_btn"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left" />

    <ImageButton
        android:id="@+id/next_btn"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@android:color/transparent"
        android:padding="5dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/arrow_right"
        tools:layout_editor_absoluteY="2dp"
        app:layout_constraintLeft_toLeftOf="@+id/ftIndex"
        android:layout_marginLeft="70dp"/>

    <ImageButton
        android:id="@+id/directions_btn"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/directions_car"
        tools:layout_editor_absoluteY="2dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@android:color/transparent"
        android:padding="5dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/ftIndex"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="1 of n"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/prev_btn"
        android:layout_marginLeft="62dp"/>

    <TableLayout
        android:id="@+id/feature_table"
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:layout_margin="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/background_light"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brewery_name"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.333">

    </TableLayout>

</android.support.constraint.ConstraintLayout>
